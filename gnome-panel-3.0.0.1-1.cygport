inherit gnome2

DESCRIPTION="GNOME Desktop panel and applets"

PATCH_URI="3.0.0.1-as-needed.patch"

PKG_NAMES="${PN} ${PN}-devel"
gnome_panel_CONTENTS="--exclude=gtk-doc etc/ usr/bin/ usr/lib/gir* usr/lib/${PN}/ usr/share/"
gnome_panel_devel_CONTENTS="usr/include/ usr/lib/lib* usr/lib/pkgconfig/
                            usr/share/gtk-doc/"

CYGCONF_ARGS="
	--libexecdir=/usr/lib/${PN}/4.0
	--disable-network-manager
"
